class Student:
    def __init__(self, name, group, average_grade):
        self.name = name
        self.group = group
        self.average_grade = average_grade

    def show_info(self):
        print("Ім'я:", self.name)
        print("Група:", self.group)
        print("Середній бал:", self.average_grade)
        print("-" * 20)



