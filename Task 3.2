import tkinter as tk

def greet():
    label.config(text="Вітаю, користувач!")

def clear():
    label.config(text="")

def exit_app():
    root.destroy()

root = tk.Tk()
root.title("Кнопки")
root.geometry("400x200")

label = tk.Label(root, text="", font=("Arial", 14))
label.pack(pady=20)

tk.Button(root, text="Привітати", command=greet).pack(side="left", padx=10)
tk.Button(root, text="Очистити", command=clear).pack(side="left", padx=10)
tk.Button(root, text="Вийти", command=exit_app).pack(side="left", padx=10)

root.mainloop()
