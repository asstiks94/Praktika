import tkinter as tk
from tkinter import filedialog, messagebox

current_file = None
text_changed = False


def open_file():
    global current_file, text_changed
    path = filedialog.askopenfilename(
        filetypes=[("Text files", "*.txt"), ("All files", "*.*")]
    )
    if path:
        with open(path, "r", encoding="utf-8") as f:
            text.delete("1.0", tk.END)
            text.insert(tk.END, f.read())
        current_file = path
        text_changed = False


def save_file():
    global current_file, text_changed
    if current_file is None:
        path = filedialog.asksaveasfilename(
            defaultextension=".txt",
            filetypes=[("Text files", "*.txt")]
        )
        if not path:
            return
        current_file = path

    with open(current_file, "w", encoding="utf-8") as f:
        f.write(text.get("1.0", tk.END))

    text_changed = False


def on_exit():
    if text_changed:
        if not messagebox.askyesno(
            "Попередження",
            "Є незбережені зміни. Вийти без збереження?"
        ):
            return
    root.destroy()


def on_change(event):
    global text_changed
    text_changed = True


root = tk.Tk()
root.title("Блокнот")
root.geometry("600x400")

text = tk.Text(root)
text.pack(expand=True, fill="both")
text.bind("<Key>", on_change)

menu = tk.Menu(root)
root.config(menu=menu)

file_menu = tk.Menu(menu, tearoff=0)
menu.add_cascade(label="Файл", menu=file_menu)
file_menu.add_command(label="Відкрити", command=open_file)
file_menu.add_command(label="Зберегти", command=save_file)
file_menu.add_separator()
file_menu.add_command(label="Вийти", command=on_exit)

root.protocol("WM_DELETE_WINDOW", on_exit)
root.mainloop()
