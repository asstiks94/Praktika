import tkinter as tk

def save():
    result = (
        f"Ім'я: {name_entry.get()}\n"
        f"Стать: {gender.get()}\n"
        f"Погодився: {'Так' if agree.get() else 'Ні'}"
    )
    output.config(text=result)

root = tk.Tk()
root.title("Анкета користувача")

tk.Label(root, text="Ім'я:").grid(row=0, column=0, sticky="w")
name_entry = tk.Entry(root)
name_entry.grid(row=0, column=1)

gender = tk.StringVar(value="Чоловіча")
tk.Label(root, text="Стать:").grid(row=1, column=0, sticky="w")
tk.Radiobutton(root, text="Чоловіча", variable=gender, value="Чоловіча").grid(row=1, column=1, sticky="w")
tk.Radiobutton(root, text="Жіноча", variable=gender, value="Жіноча").grid(row=2, column=1, sticky="w")

agree = tk.BooleanVar()
tk.Checkbutton(root, text="Погоджуюсь із умовами", variable=agree).grid(row=3, columnspan=2)

tk.Button(root, text="Зберегти", command=save).grid(row=4, columnspan=2, pady=10)

output = tk.Label(root, text="", justify="left")
output.grid(row=5, columnspan=2)

root.mainloop()
